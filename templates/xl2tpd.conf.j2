[global]
auth file = /etc/ppp/chap-secrets

[lns default]
ip range = {{ xl2tpd_ip_range }}
local ip = {{ xl2tpd_local_ip }}
refuse chap = yes
refuse pap = yes
require authentication = yes
ppp debug = no
pppoptfile = /etc/ppp/options.xl2tpd
length bit = yes
exclusive = no
assign ip = yes
name = VPN-Server